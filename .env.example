# ===========================================
# Event Booking System - Environment Config
# ===========================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!

# --- Database ---
# For local development (running without Docker):
# DATABASE_URL="postgresql://admin:secret@localhost:5432/telegram_event_reservation_bot?schema=public"

# For Docker Compose (credentials used to create the DB):
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret
POSTGRES_DB=telegram_event_reservation_bot

# --- Telegram Bot ---
# Get these from @BotFather after creating your bot
TELEGRAM_BOT_TOKEN="your_bot_token_here"
TELEGRAM_BOT_NAME="your_bot_username_here"
